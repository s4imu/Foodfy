<div class="recipeHeader">
    <img src="{{recipe.image}}" class="imgRecipe" alt="{{recipe.id}}">
    <p class="nameRecipe">{{recipe.title}}</p>
    <p class="authorRecipe">{{recipe.author}}</p>
</div>
<div class="recipeInfos">

    <div class="ingredients">
        <h1>Ingredientes<button type="button" onclick="ingredientsButton()" id="ingredientButton">MOSTRAR</button>
        </h1>
        <ul class="recipeIngredients hide">
            {%for ingredient in recipe.ingredients%}
                <li>
                    <p>
                        {{ingredient}}
                    </p>
                </li>
                {%endfor%}
            </ul>
        </div>

        <div class="Preparation">
            <h1>Modo de preparo<button type="button" onclick="preparationButton()" id="prepButton">MOSTRAR</button>
            </h1>
            <ul class="recipePreparation hide">
                {%for preparation in recipe.preparation%}
                    <li>
                        <p>
                            {{preparation}}
                        </p>
                    </li>
                    {%endfor%}
                </ul>
            </div>
            <div class="additionalInfos">
                <h1>Informações adicionais<button type="button" onclick="infoButton()" id="infoButton">MOSTRAR</button>
                </h1>
                <p class="recipeInfo hide">{{recipe.information}}</p>
            </div>
        </div>

        <script src="/js/script.js"></script>