<button type="submit" class="save">Salvar receita</button>
<div class="item">
    <div>Imagem da Receita</div>
    <div class="preview">
       <div id="photos-upload">
           <input 
           type="file" 
           id="photos-input"
           name="photos"
           multiple
           accept="image/*"
           onchange="PhotosUpload.handleFileInput(event)"
           >
           <span>
               <i class="material-icons">
                   add
               </i>
           </span>
       </div>
       <div id="photos-preview">

       </div>
    </div>
</div>
<div class="item">
    <div>Título da Receita</div>
    <div>
        <input type="text" name="title" value="{{recipe.title}}">
    </div>
</div>
{% if recipe.id %}
    <div class="item">
        <div>Chef</div>
        <div>
            <select name="chef_id">
                {% for chef in chefOptions %}
                    <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected="selected" {% endif %}>{{chef.name}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endif %}
<div class="item">
    <div id="ingredients">
        <div>Ingredientes</div>
        {%if recipe %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ingredient}}"/>
                </div>
            {% endfor %}
            {%else%}
            <div class="ingredient">
                <input type="text" name="ingredients[]"/>
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-ingredient">Adicionar ingrediente</button>
</div>
<div class="item">
    <div id="preparation">
        <div>Modo de Preparo</div>
        {% if recipe %}
            {% for preparation in recipe.preparation %}
                <div class="preparation">
                    <input type="text" name="preparation[]" value="{{preparation}}"/>
                </div>
            {% endfor %}
        {% else %}
            <div class="preparation">
                <input type="text" name="preparation[]"/>
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>
</div>
<div class="item">
    <div>Informações Adicionais</div>
    <div>
        <input class="boxInformation" type="text" name="information" value="{{recipe.information}}">
    </div>
</div>